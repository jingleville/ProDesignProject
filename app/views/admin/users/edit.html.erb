<h1 class="text-2xl font-bold mb-6">Изменить роль: <%= @user.full_name %></h1>

<div class="max-w-md">
  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, class: "space-y-4") do |f| %>
    <div>
      <p class="text-sm text-gray-500 mb-2">Email: <span class="font-medium text-gray-900"><%= @user.email %></span></p>
      <p class="text-sm text-gray-500 mb-4">Текущая роль: <span class="font-medium text-gray-900"><%= @user.role_name %></span></p>
    </div>

    <div>
      <%= f.label :role, "Новая роль", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :role, User::ROLE_TRANSLATIONS.map { |k, v| [v, k] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
    </div>

    <div class="flex space-x-3">
      <%= f.submit "Сохранить", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
      <%= link_to "Отмена", admin_users_path, class: "bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
