<%= form_with(model: [project, task], class: "space-y-4") do |f| %>
  <% if task.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
      <ul class="list-disc list-inside">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Название", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
  </div>

  <div>
    <%= f.label :description, "Описание", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :preliminary_start_at, "Плановое начало", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :preliminary_start_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
    </div>
    <div>
      <%= f.label :preliminary_due_at, "Плановый срок", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :preliminary_due_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
    </div>
  </div>

  <% if available_dependencies.any? %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Зависимости</label>
      <div class="space-y-2 max-h-40 overflow-y-auto border rounded-md p-2">
        <% available_dependencies.each do |dep_task| %>
          <label class="flex items-center space-x-2">
            <input type="checkbox" name="task[dependency_ids][]" value="<%= dep_task.id %>"
              <%= "checked" if task.dependencies.include?(dep_task) %>
              class="rounded border-gray-300 text-indigo-600">
            <span class="text-sm"><%= dep_task.title %></span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.submit "Сохранить", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
