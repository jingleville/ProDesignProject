<%= form_with(url: url, class: "flex space-x-2") do |f| %>
  <%= f.text_area :body, placeholder: "Написать комментарий...", rows: 2, class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border text-sm" %>
  <%= f.submit "Отправить", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 text-sm cursor-pointer self-end" %>
<% end %>
