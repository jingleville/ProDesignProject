<div class="bg-white shadow-sm rounded-lg p-4">
  <div class="flex justify-between items-start">
    <div>
      <span class="font-medium text-sm text-gray-900"><%= comment.user.full_name %></span>
      <span class="text-xs text-gray-500 ml-2"><%= comment.created_at.strftime("%d.%m.%Y %H:%M") %></span>
    </div>
    <% if policy(comment).destroy? %>
      <%= button_to "Удалить", polymorphic_path([comment.commentable.is_a?(Task) ? comment.commentable.project : nil, comment.commentable, comment].compact), method: :delete, class: "text-xs text-red-500 hover:text-red-700", data: { turbo_confirm: "Вы уверены?" } %>
    <% end %>
  </div>
  <p class="mt-1 text-sm text-gray-700"><%= comment.body %></p>
</div>
