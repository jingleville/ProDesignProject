<% ru_days = %w[Воскресенье Понедельник Вторник Среда Четверг Пятница Суббота] %>
<% ru_months = %w[января февраля марта апреля мая июня июля августа сентября октября ноября декабря] %>

<h1 class="text-2xl font-bold mb-6">Список дел</h1>

<div class="mb-6 flex items-center space-x-4">
  <div class="flex items-center space-x-2">
    <%= link_to "Планёр", planner_path, class: "px-3 py-1 rounded-md bg-gray-200 text-gray-700 hover:bg-gray-300 text-sm" %>
    <span class="text-gray-400">|</span>
    <span class="px-3 py-1 rounded-md bg-indigo-600 text-white text-sm">Список дел</span>
  </div>
  <div class="flex items-center space-x-2">
    <span class="text-sm text-gray-500">Показать на:</span>
    <%= link_to "7 дней", planner_calendar_path(days: 7), class: "px-3 py-1 rounded-md text-sm #{@days_ahead == 7 ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
    <%= link_to "30 дней", planner_calendar_path(days: 30), class: "px-3 py-1 rounded-md text-sm #{@days_ahead == 30 ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
    <%= link_to "60 дней", planner_calendar_path(days: 60), class: "px-3 py-1 rounded-md text-sm #{@days_ahead == 60 ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
  </div>
</div>

<% if @tasks_by_date.empty? %>
  <p class="text-gray-500 mt-4">Нет задач на ближайшие <%= @days_ahead %> дней.</p>
<% else %>
  <div class="space-y-8">
    <% @tasks_by_date.sort.each do |date, tasks| %>
      <div>
        <div class="flex items-center space-x-2 mb-2">
          <h2 class="text-base font-semibold text-gray-800">
            <%= ru_days[date.wday] %>, <%= date.day %> <%= ru_months[date.month - 1] %> <%= date.year %>
          </h2>
          <% if date == Date.current %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">Сегодня</span>
          <% end %>
        </div>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Задача</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Проект</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Исполнитель</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% tasks.each do |task| %>
                <tr class="hover:bg-gray-50 <%= 'bg-red-50' if task.overdue? %>">
                  <td class="px-4 py-3">
                    <%= link_to task.title, project_task_path(task.project, task), class: "text-indigo-600 hover:text-indigo-900 font-medium text-sm" %>
                    <% if task.overdue? %>
                      <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Просрочена</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <%= link_to task.project.name, project_path(task.project), class: "hover:text-indigo-600" %>
                  </td>
                  <td class="px-4 py-3">
                    <%= render partial: "tasks/status_badge", locals: { status: task.status } %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <%= task.assignees.map(&:full_name).join(", ").presence || "Не назначен" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
