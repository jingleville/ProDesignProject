<div class="mb-6">
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-2xl font-bold"><%= @project.name %></h1>
      <p class="text-gray-600 mt-1"><%= @project.description %></p>
      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
        <%= render partial: "projects/status_badge", locals: { status: @project.status } %>
        <span>Автор: <%= @project.created_by.full_name %></span>
        <span><%= @project.created_at.strftime("%d.%m.%Y") %></span>
      </div>
    </div>
    <div class="flex space-x-2">
      <% if policy(@project).update? %>
        <%= link_to "Редактировать", edit_project_path(@project), class: "bg-gray-200 text-gray-700 px-3 py-2 rounded-md hover:bg-gray-300 text-sm" %>
      <% end %>
      <%= link_to "Гант", gantt_project_path(@project), class: "bg-indigo-100 text-indigo-700 px-3 py-2 rounded-md hover:bg-indigo-200 text-sm" %>
    </div>
  </div>
</div>

<div class="flex justify-between items-center mb-4">
  <h2 class="text-lg font-semibold">Задачи</h2>
  <% if policy(Task).create? %>
    <%= link_to "Новая задача", new_project_task_path(@project),
          target: "_blank", data: { turbo: false }, class: "bg-indigo-600 text-white px-3 py-2 rounded-md hover:bg-indigo-700 text-sm" %>
  <% end %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Название</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Исполнитель</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Начало</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Срок</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Зависимости</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @tasks.each do |task| %>
        <tr class="hover:bg-gray-50 <%= 'bg-red-50' if task.overdue? %>">
          <td class="px-6 py-4">
            <%= link_to task.title, project_task_path(@project, task), class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
            <% if task.overdue? %>
              <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Просрочена</span>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <%= render partial: "tasks/status_badge", locals: { status: task.status } %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= task.assignee&.full_name || "Не назначен" %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= task.start_date&.strftime("%d.%m.%Y") %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= task.due_date&.strftime("%d.%m.%Y") %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= task.dependencies.map(&:title).join(", ").presence || "Нет" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-8">
  <h2 class="text-lg font-semibold mb-4">Комментарии</h2>
  <%= render partial: "comments/form", locals: { commentable: @project, url: project_comments_path(@project) } %>
  <div class="mt-4 space-y-4">
    <% @project.comments.includes(:user).order(created_at: :desc).each do |comment| %>
      <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
  </div>
</div>
