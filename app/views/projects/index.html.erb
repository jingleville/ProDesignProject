<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Проекты</h1>
  <% if policy(Project).create? %>
    <%= link_to "Новый проект", new_project_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
  <% end %>
</div>

<div class="mb-4 flex space-x-2">
  <%= link_to "Все", projects_path, class: "px-3 py-1 rounded-md #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
  <% Project::STATUS_TRANSLATIONS.each do |key, label| %>
    <%= link_to label, projects_path(status: key), class: "px-3 py-1 rounded-md #{params[:status] == key ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
  <% end %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Название</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Задачи</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Автор</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Создан</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @projects.each do |project| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <%= link_to project.name, project_path(project), class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
          </td>
          <td class="px-6 py-4">
            <%= render partial: "projects/status_badge", locals: { status: project.status } %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= project.tasks.size %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= project.created_by.full_name %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= project.created_at.strftime("%d.%m.%Y") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
